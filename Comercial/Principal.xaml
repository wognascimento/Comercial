<Window x:Class="Comercial.Principal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:local="clr-namespace:Comercial"
        mc:Ignorable="d"
        Title="SISTEMA INTEGRADO DE GERENCIAMENTO - COMERCIAL" Height="450" Width="800" WindowState="Maximized" WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu para criar novos documentos -->
       
            <!--
            <MenuItem Header="Arquivo">
                <MenuItem Header="Novo Documento" Click="NovoDocumento_Click"/>
            </MenuItem>
            -->
            <telerik:RadMenu Grid.Row="0" Background="AliceBlue" >

                <telerik:RadMenuItem Header="Cadastro">
                    <telerik:RadMenuItem Header="Família" Click="OnAbrirCadastroFamiliaClick" />
                    <telerik:RadMenuItem Header="Descrição" Click="OnAbrirCadastroDescricaoClick"/>
                    <telerik:RadMenuItem Header="Ficha de Homologação" Click="OnAbrirCadastroHomologacaoComercialClick" />
                </telerik:RadMenuItem>

                <telerik:RadMenuItem Header="Proposta">
                    <telerik:RadMenuItem Header="Quantitativo" Click="OnAbrirQuadroQuantitativoClick" />
                    <telerik:RadMenuItem Header="Revisão" Click="OnAbrirQuadroRevisaoClick"/>
                    <telerik:RadMenuItem Header="Fecha/Memorial" />
                </telerik:RadMenuItem>
                
                <telerik:RadMenuItem Header="Consulta">
                    <telerik:RadMenuItem Header="Todoas as Descrições" />
                </telerik:RadMenuItem>
                
            </telerik:RadMenu>
       

        <!-- RadDocking como container MDI -->
        <telerik:RadDocking Grid.Row="1" x:Name="radDocking"
                    HasDocumentHost="True">
            <telerik:RadDocking.DocumentHost>
                <telerik:RadSplitContainer>
                    <telerik:RadPaneGroup x:Name="documentGroup"/>
                </telerik:RadSplitContainer>
            </telerik:RadDocking.DocumentHost>
        </telerik:RadDocking>

        <!-- Menu para criar novos documentos -->

        <telerik:RadToolBar Grid.Row="2" 
                            Background="AliceBlue"
                            GripVisibility="Collapsed" 
                            OverflowButtonVisibility="Collapsed">
            
            <Button>
                <Image Source="/icones/icons8-usu_0025c3_0025a1rio-de-g_0025c3_0025aanero-neutro-windows-metro-16.png" />
            </Button>
            <TextBlock x:Name="txtUsername" Text="USUÁRIO LOGADO" />


            <TextBlock x:Name="txtDataBase" Text="BANCO DE DADOS" telerik:RadToolBar.ItemAlignment="Right"/>
            <Button telerik:RadToolBar.ItemAlignment="Right">
                <Image Source="/icones/configuracao-de-dados-windows-metro-16.png" />
            </Button>

            <!--
            <telerik:RadProgressBar 
                Width="200" 
                Value="20"
                IsIndeterminate="True" 
                ContentForeground="#FF0099BC"
                Foreground="#FF0099BC"
                telerik:RadToolBar.ItemAlignment="Right"/>
            -->
        </telerik:RadToolBar>
        
    </Grid>
</Window>
