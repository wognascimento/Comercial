<UserControl x:Class="Comercial.Views.Proposta.PropostaQuadroPreco"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:local="clr-namespace:Comercial.Views.Proposta"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400">

    <Grid Margin="5" Background="White">
        <Grid.RowDefinitions>

            <RowDefinition Height="Auto"/>
            <!-- Ribbon -->
            <RowDefinition Height="Auto"/>
            <!-- Parte superior -->
            <RowDefinition Height="*"/>
            <!-- Itens da proposta -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- Painel esquerdo com largura automática -->
            <ColumnDefinition Width="*"/>
            <!-- Painel direito ocupa o restante -->
        </Grid.ColumnDefinitions>

        <!--
        <telerik:RadMenu Grid.Row="0" Grid.ColumnSpan="2" Margin="5" >
            <telerik:RadMenuItem Header="Imprimir"  />
            <telerik:RadMenuItem Header="Família"  />
        </telerik:RadMenu>
-->

        <!-- ==================== PAINEL ESQUERDO ==================== -->
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical" Margin="0,0,10,0">

            <!-- CLIENTE -->
            <Border BorderBrush="Gray" BorderThickness="1" Padding="5" Margin="0,0,0,10">
                <!-- ... (conteúdo idêntico ao original) ... -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Cliente:" VerticalAlignment="Center"/>
                    <telerik:RadMultiColumnComboBox x:Name="boxBrienfing" 
                        Grid.Row="0" Grid.Column="1" 
                        DisplayMemberPath="nome" 
                        SelectedItem="{Binding SelectedBriefing}"
                        DropDownWidth="550" 
                        SelectionChanged="boxBrienfing_SelectionChanged" 
                        CloseDropDownAfterSelectionInput="True">
                        <telerik:RadMultiColumnComboBox.ItemsSourceProvider>
                            <telerik:GridViewItemsSourceProvider ItemsSource="{Binding PropostaBriefings}" 
                                                 AutoGenerateColumns="False">
                                <telerik:GridViewItemsSourceProvider.Columns>
                                    <telerik:GridViewDataColumn DataMemberBinding="{Binding sigla}"/>
                                    <telerik:GridViewDataColumn DataMemberBinding="{Binding nome}"/>
                                    <telerik:GridViewDataColumn DataMemberBinding="{Binding codbriefing}"/>
                                    <telerik:GridViewDataColumn DataMemberBinding="{Binding tipo_evento}"/>
                                </telerik:GridViewItemsSourceProvider.Columns>
                            </telerik:GridViewItemsSourceProvider>
                        </telerik:RadMultiColumnComboBox.ItemsSourceProvider>
                    </telerik:RadMultiColumnComboBox>

                    <TextBlock Grid.Row="0" Grid.RowSpan="2" Grid.Column="2" Text="Categoria Tema:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <TextBlock Grid.Row="0" Grid.RowSpan="2" Grid.Column="3" Text="{Binding SelectedBriefingTema.faixapreco}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <TextBlock Grid.Row="0" Grid.RowSpan="2" Grid.Column="4" Text="Diretor Cliente:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <TextBlock Grid.Row="0" Grid.RowSpan="2" Grid.Column="5" Text="{Binding SelectedBriefing.diretorcliente}" VerticalAlignment="Center" Margin="10,0,0,0"/>

                    <TextBlock Grid.Row="1" Grid.RowSpan="2" Grid.Column="2" Text="Índice Tema:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <TextBlock Grid.Row="1" Grid.RowSpan="2" Grid.Column="3" Text="{Binding SelectedBriefingTema.indiceproposta}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <TextBlock Grid.Row="1" Grid.RowSpan="2" Grid.Column="4" Text="Responsável Tema:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <TextBlock Grid.Row="1" Grid.RowSpan="2" Grid.Column="5" Text="{Binding SelectedBriefingTema.resp_tema}" VerticalAlignment="Center" Margin="10,0,0,0"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Tema:" VerticalAlignment="Center"/>
                    <telerik:RadComboBox x:Name="boxBrienfingTema" 
                        Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="6" Margin="2"
                        DisplayMemberPath="temas"
                        ItemsSource="{Binding PropostaBriefingTemas}"
                        SelectedItem="{Binding SelectedBriefingTema}" SelectionChanged="boxBrienfingTema_SelectionChanged"/>
                </Grid>
            </Border>

            <!-- FAIXA VERDE -->
            <Border BorderBrush="Gray" BorderThickness="1" Background="#E4F5E4" Padding="5" Margin="0,0,0,10" Visibility="Collapsed">
                <!-- ... (conteúdo idêntico ao original) ... -->
                <Grid Background="Lime" Margin="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Resultado: " VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="0" Margin="2"/>
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Tema: " VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="2" Text="{Binding SelectedBriefingTema.tema}" Margin="2"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Tema Novo: " VerticalAlignment="Center" Margin="5,0,0,0"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="0" Margin="2"/>
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="Verba: " VerticalAlignment="Center" Margin="5,0,0,0"/>
                    <TextBlock Grid.Row="1" Grid.Column="3" Text="238293" Margin="2"/>
                    <TextBlock Grid.Row="1" Grid.Column="4" Text="Índice Tema: " VerticalAlignment="Center" Margin="5,0,0,0"/>
                    <TextBlock Grid.Row="1" Grid.Column="5" Text="0" Margin="2"/>
                </Grid>
            </Border>

            <!-- INFORMAÇÕES PARA PROPOSTA -->
            <Border BorderBrush="Gray" BorderThickness="1" Padding="5">
                <!-- ... (conteúdo idêntico ao original) ... -->
                <StackPanel>
                    <TextBlock Text="Informações para proposta" FontWeight="Bold" Background="#B0B0B0" Padding="3" Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="78"/>
                            <ColumnDefinition Width="78"/>
                            <ColumnDefinition Width="78"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="78"/>
                            <ColumnDefinition Width="78"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Item:" Grid.Row="0" Margin="0,0,0,2"/>
                        <telerik:RadWatermarkTextBox x:Name="txtItem" Grid.Column="1" Grid.Row="0" Margin="0,0,0,2"/>

                        <TextBlock Text="Quantidade:" Grid.Column="2" Grid.Row="0" Margin="2,0,2,2"/>
                        <telerik:RadWatermarkTextBox x:Name="txtQuantidade" Grid.Column="3" Grid.Row="0" Margin="0,0,0,2"/>

                        <TextBlock Text="Local:" Grid.Row="1" Margin="0,0,0,2"/>
                        <telerik:RadComboBox x:Name="cbLocal" 
                            Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="1" Margin="0,0,0,2"
                            ItemsSource="{Binding ComercialPropostaLocais}"/>

                        <TextBlock Text="Local detalhes:" Grid.Column="4" Grid.Row="1" Margin="2,0,2,2"/>
                        <!--<telerik:RadWatermarkTextBox 
                            Grid.Column="5" Grid.Row="1"  Grid.ColumnSpan="3" Margin="0,0,0,2"/>-->

                        <telerik:RadAutoCompleteBox x:Name="txtLocalDetalhes" 
                            Grid.Column="5" Grid.Row="1"  Grid.ColumnSpan="3" Margin="0,0,0,2"
	                        ItemsSource="{Binding ComercialPropostaDetalhesLocais}"
                            TextSearchMode="Contains" 
                            SelectionMode="Single" 
                            AutoCompleteMode="SuggestAppend"/>

                        <TextBlock Text="Tipo:" Grid.Row="2" Margin="0,0,0,2"/>
                        <telerik:RadComboBox x:Name="cbTipo" 
                            Grid.Column="1" Grid.Row="2"  Grid.ColumnSpan="3" Margin="0,0,0,2"
                            ItemsSource="{Binding ComercialPropostaTipos}"/>

                        <TextBlock Text="Bloco:" Grid.Column="4" Grid.Row="2" Margin="2,0,2,2"/>
                        <telerik:RadComboBox x:Name="cbBloco" 
                            Grid.Column="5" Grid.Row="2"  Grid.ColumnSpan="3" Margin="0,0,0,2"
                            ItemsSource="{Binding ComercialPropostaBlocos}"/>

                        <TextBlock Text="Família:" Grid.Row="3" Margin="0,0,0,2"/>
                        <telerik:RadComboBox x:Name="cbFamilia" 
                            Grid.Column="1" Grid.Row="3"  Grid.ColumnSpan="3" Margin="0,0,0,2"
                            DisplayMemberPath="familia" 
                            ItemsSource="{Binding ComercialPropostaFamilias}"
                            SelectionChanged="rasBoxSelectionChanged"/>

                        <TextBlock Text="Descrição:" Grid.Column="4" Grid.Row="3" Margin="2,0,2,2"/>
                        <telerik:RadComboBox
                            x:Name="cbDescricao" 
                            ItemsSource="{Binding DescricoesComercial}"
                            DisplayMemberPath="descricaocomercial"
                            Grid.Column="5" Grid.Row="3"  Grid.ColumnSpan="3" 
                            Margin="0,0,0,2"
                            IsEditable="True"
                            TextSearchMode="Contains"
                            IsFilteringEnabled="True" 
                            SelectionChanged="rasBoxSelectionChanged"/>

                        <TextBlock Text="Dimensão:" Grid.Row="4" Margin="0,0,0,2"/>
                        <telerik:RadWatermarkTextBox Grid.Column="1" Grid.Row="4"  Grid.ColumnSpan="7" Margin="0,0,0,2"/>
                        <telerik:RadComboBox  
                            x:Name="cbDimenssao" 
                            ItemsSource="{Binding DimensoesComercial}"
                            SelectedItem="{Binding DimenssaoComercial}"
                            DisplayMemberPath="dimensao"
                            Grid.Column="1" Grid.Row="4"  Grid.ColumnSpan="7"
                            Margin="0,0,0,2"
                            IsEditable="True"
                            TextSearchMode="Contains"
                            IsFilteringEnabled="True" 
                            SelectionChanged="rasBoxSelectionChanged"/>

                        <TextBlock Text="LED:" Grid.Row="5" Margin="0,0,0,2"/>
                        <telerik:RadComboBox x:Name="cbLED" 
                            Grid.Column="1" Grid.Row="5"  Grid.ColumnSpan="2" Margin="0,0,0,2"
                            ItemsSource="{Binding ComercialPropostaLeds}"/>

                        <TextBlock Text="Observação:" Grid.Row="6" Margin="0,0,0,2"/>
                        <telerik:RadWatermarkTextBox x:Name="txtObservacao" Grid.Column="1" Grid.Row="6"  Grid.ColumnSpan="7" Margin="0,0,0,2"/>

                        <TextBlock Text="Observação interna:" Grid.Row="7" Margin="0,0,0,2"/>
                        <telerik:RadWatermarkTextBox x:Name="txtObservacaoInterna" Grid.Column="1" Grid.Row="7"  Grid.ColumnSpan="7" Margin="0,0,0,2"/>

                        <TextBlock x:Name="txtObservacaoObrigatoria" 
                            Grid.Row="8" 
                            Background="Yellow" 
                            Padding="2" 
                            FontWeight="Bold" 
                            Grid.ColumnSpan="8" Margin="0,0,0,2"
                            Text="{Binding DimenssaoComercial.obsobrigatoria}"/>

                        <StackPanel Grid.Row="9" Grid.ColumnSpan="8" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,2">

                            <telerik:RadButton x:Name="btnAlterar" Content="ALTERAR" Margin="2" Click="OnAlterarClick"/>
                            <telerik:RadButton x:Name="btnIncluir" Content="INCLUIR" Margin="2" Click="OnIncluirClick"/>
                            <telerik:RadButton x:Name="btnLimpar" Content="LIMPAR" Margin="2" Click="OnLimparClick"/>
                            <telerik:RadButton x:Name="btnExcluir" Content="EXCLUIR" Margin="2" Click="OnExcluirClick"/>
                            <telerik:RadButton x:Name="btnCopiar" Content="COPIAR" Margin="2" Click="OnCopiarClick"/>

                        </StackPanel>

                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- ==================== PAINEL DIREITO (VERBA + RESUMO GERAL) ==================== -->
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Verba -->
                <RowDefinition Height="*"/>
                <!-- Resumo Geral -->
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="315"/>
                <!-- Verba fixa -->
                <ColumnDefinition Width="*"/>
                <!-- Resumo Geral se expande -->
            </Grid.ColumnDefinitions>

            <!-- VERBA -->
            <Border Grid.Row="0" Grid.Column="0"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Background="#D9D9D9"
                    Padding="5"
                    Margin="0,0,5,0">
                <!-- ... (conteúdo idêntico ao original) ... -->
                <StackPanel>
                    <TextBlock Text="Verba" FontWeight="Bold" Background="#B0B0B0" Padding="3" Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Mínima Interna" FontWeight="Bold"/>
                        <TextBlock Grid.Column="1" Text="Máxima Interna" FontWeight="Bold"/>
                        <TextBox Grid.Column="0" Grid.Row="1" Margin="2" Text="{Binding SelectedBriefing.verbaminint}"/>
                        <TextBox Grid.Column="1" Grid.Row="1" Margin="2" Text="{Binding SelectedBriefing.verbamaxint}"/>
                        <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" Text="Definido por:" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBox Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="3" Margin="2" Text="{Binding SelectedBriefing.verbaintdefinidapor}"/>
                        <TextBlock Grid.Column="0" Grid.Row="4" Text="Mínima Externa" FontWeight="Bold" Margin="0,5,0,0"/>
                        <TextBlock Grid.Column="1" Grid.Row="4" Text="Máxima Externa" FontWeight="Bold" Margin="0,5,0,0"/>
                        <TextBox Grid.Column="0" Grid.Row="5" Margin="2" Text="{Binding SelectedBriefing.verbaminext}"/>
                        <TextBox Grid.Column="1" Grid.Row="5" Margin="2" Text="{Binding SelectedBriefing.verbamaxext}"/>
                        <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="6" Text="Definido por:" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBox Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="7" Margin="2" Text="{Binding SelectedBriefing.verbaextdefinidapor}"/>
                        <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="8" Text="Única" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBox Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="9" Margin="2" Text="{Binding SelectedBriefing.verbaunica}"/>
                        <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="10" Text="Única Definido por:" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBox Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="11" Margin="2" Text="{Binding SelectedBriefing.verbaunicadefinidapor}"/>
                        <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="12" Text="Moeda" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBox Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="13" Margin="2" Text="{Binding SelectedBriefing.moeda}"/>
                        <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="14" Text="Valor Inicial" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBox Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="15" Margin="2" Text="{Binding SelectedBriefing.vlr_inicial}"/>
                        <TextBlock Grid.Column="0" Grid.Row="16" Text="Data Inicio:" FontWeight="Bold" Margin="0,5,0,0" Opacity="0.5"/>
                        <telerik:RadDateTimePicker 
                            x:Name="dtInicio" 
                            InputMode="DatePicker" 
                            TodayButtonVisibility="Visible"
                            Grid.Column="1" Grid.Row="16" 
                            SelectionChanged="dtInicial_SelectionChanged" />
                        <TextBlock Grid.Column="0" Grid.Row="17" Text="Data Conclusão:" FontWeight="Bold" Margin="0,5,0,0" Opacity="0.5"/>
                        <telerik:RadDateTimePicker 
                            x:Name="dtConclusao" 
                            InputMode="DatePicker" 
                            TodayButtonVisibility="Visible"
                            Grid.Column="1" Grid.Row="17" 
                            SelectionChanged="dtConclusao_SelectionChanged" />

                        <!--<DatePicker x:Name="dtConclusao"
                                    SelectedDateFormat="Short"
                                    Grid.Column="1" Grid.Row="16" 
                                    SelectedDateChanged="dtConclusao_SelectedDateChanged" />-->

                    </Grid>
                </StackPanel>
            </Border>

            <!-- RESUMO GERAL -->
            <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="1"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Padding="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                <DockPanel LastChildFill="True">
                    <TextBlock Text="Resumo Geral"
                               FontWeight="Bold"
                               Background="#B0B0B0"
                               Padding="3"
                               DockPanel.Dock="Top"
                               Margin="0,0,0,5"/>
                    <telerik:RadGridView x:Name="GridVerbas"
                                         ItemsSource="{Binding ResumosProposta}"
                                         AutoGenerateColumns="False"
                                         IsReadOnly="True"
                                         ShowGroupPanel="False"
                                         HorizontalAlignment="Stretch"
                                         VerticalAlignment="Stretch">
                        <telerik:RadGridView.Columns>
                            <telerik:GridViewDataColumn Header="TEMA" DataMemberBinding="{Binding tema}"/>
                            <telerik:GridViewDataColumn Header="TIPO" DataMemberBinding="{Binding tipo}"/>
                            <telerik:GridViewDataColumn Header="TOTAL" DataMemberBinding="{Binding total}" DataFormatString="{}{0:N2}"/>
                        </telerik:RadGridView.Columns>
                    </telerik:RadGridView>
                </DockPanel>
            </Border>
        </Grid>

        <!-- ==================== ITENS DA PROPOSTA ==================== -->
        <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
        BorderBrush="Gray" BorderThickness="1" Padding="5" Margin="0,10,0,0">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Itens da Proposta"
                   FontWeight="Bold"
                   Background="#B0B0B0"
                   Padding="3"
                   Margin="0,0,0,5"/>

                <telerik:RadGridView x:Name="itensProposta" 
                    Grid.Row="1"
                    ItemsSource="{Binding ItensProposta}"
                    SelectedItem="{Binding ItemProposta}"
                    AutoGenerateColumns="False" 
                    ColumnWidth="SizeToHeader"
                    ShowGroupPanel="False"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch" 
                    SelectionMode="Extended"
                    ClipboardCopyMode="Cells, Header"
                    MouseDoubleClick="itensProposta_MouseDoubleClick">
                    <!--
                    <telerik:RadGridView.ColumnGroups>
                        <telerik:GridViewColumnGroup Name="PrecoExcel" Header="PREÇO EXCEL"/>
                    </telerik:RadGridView.ColumnGroups>
                    -->
                    <telerik:RadGridView.Columns>
                        <telerik:GridViewDataColumn Header="ILUSTRAÇÃO" IsReadOnly="true" DataMemberBinding="{Binding ilustracao}"/>
                        <telerik:GridViewDataColumn Header="TIPO" IsReadOnly="true" DataMemberBinding="{Binding tipo}"/>
                        <telerik:GridViewDataColumn Header="BLOCO" IsReadOnly="true" DataMemberBinding="{Binding bloco}"/>
                        <telerik:GridViewDataColumn Header="FAMÍLIA" IsReadOnly="true" DataMemberBinding="{Binding familia}"/>
                        <telerik:GridViewDataColumn Header="ITEM" IsReadOnly="true" DataMemberBinding="{Binding item}"/>
                        <telerik:GridViewDataColumn Header="LOCAL" IsReadOnly="true" DataMemberBinding="{Binding localitem}"/>
                        <telerik:GridViewDataColumn Header="DESCRIÇÃO" IsReadOnly="true" Width="*" DataMemberBinding="{Binding descricaocomercial}"/>
                        <telerik:GridViewDataColumn Header="DIMENSÃO" IsReadOnly="true" Width="*" DataMemberBinding="{Binding dimensao}"/>
                        <telerik:GridViewDataColumn Header="QTD" IsReadOnly="true" DataMemberBinding="{Binding qtd}"/>
                        <telerik:GridViewDataColumn Header="QTD ANTERIOR" IsReadOnly="true" DataMemberBinding="{Binding qtdanterior}"/>
                        <telerik:GridViewDataColumn Header="OBSERVAÇÃO" IsReadOnly="true" DataMemberBinding="{Binding obs}"/>
                        <telerik:GridViewDataColumn Header="OBSERVAÇÃO INTERNA" IsReadOnly="true" DataMemberBinding="{Binding obsinterna}"/>
                        <telerik:GridViewDataColumn Header="UNITÁRIO" IsReadOnly="true" ColumnGroupName="PrecoExcel" DataMemberBinding="{Binding preco_excel}" DataFormatString="{}{0:N2}"/>
                        <telerik:GridViewDataColumn Header="TOTAL" IsReadOnly="true" ColumnGroupName="PrecoExcel" DataMemberBinding="{Binding preco_excel_total}" DataFormatString="{}{0:N2}"/>
                    </telerik:RadGridView.Columns>


                    <!-- Definição da Hierarquia -->
                    <telerik:RadGridView.ChildTableDefinitions>
                        <telerik:GridViewTableDefinition>
                            <telerik:GridViewTableDefinition.Relation>
                                <telerik:PropertyRelation ParentPropertyName="Ilustracoes" />
                            </telerik:GridViewTableDefinition.Relation>
                        </telerik:GridViewTableDefinition>
                    </telerik:RadGridView.ChildTableDefinitions>

                    <!-- Configuração da Tabela Filha (Ilustracoes) -->
                    <telerik:RadGridView.HierarchyChildTemplate>
                        <DataTemplate>
                            <telerik:RadGridView 
                                ItemsSource="{Binding Ilustracoes}" 
                                NewRowPosition="Top"
                                AutoGenerateColumns="False"
                                ShowGroupPanel="False"
                                AddingNewDataItem="RadGridView_AddingNewDataItem"
                                RowValidating="RadGridViewIlustracaoRowValidating">
                                <telerik:RadGridView.Columns>
                                    <telerik:GridViewComboBoxColumn 
                                        DataMemberBinding="{Binding tipo}"
                                        ItemsSource="{Binding DataContext.Tipos, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                                    <telerik:GridViewDataColumn DataMemberBinding="{Binding qtd}" />
                                    <telerik:GridViewDataColumn DataMemberBinding="{Binding obs}" />
                                    <telerik:GridViewDataColumn DataMemberBinding="{Binding resp}" />
                                    <telerik:GridViewDataColumn DataMemberBinding="{Binding controle_pedidos}" />
                                    <telerik:GridViewDataColumn DataMemberBinding="{Binding cancelado}" />
                                    <telerik:GridViewDataColumn DataMemberBinding="{Binding cancelado_por}" />
                                    <telerik:GridViewDataColumn DataMemberBinding="{Binding cancelado_data, StringFormat=\{0:dd/MM/yyyy\}}" />
                                    <telerik:GridViewDataColumn DataMemberBinding="{Binding cancelado_obs}" />
                                    <telerik:GridViewDataColumn DataMemberBinding="{Binding inserido_por}" IsReadOnly="true"/>
                                    <telerik:GridViewDataColumn DataMemberBinding="{Binding data_pedido, StringFormat=\{0:dd/MM/yyyy\}}" IsReadOnly="true"/>
                                </telerik:RadGridView.Columns>
                            </telerik:RadGridView>
                        </DataTemplate>
                    </telerik:RadGridView.HierarchyChildTemplate>

                </telerik:RadGridView>
            </Grid>

        </Border>
    </Grid>

</UserControl>
