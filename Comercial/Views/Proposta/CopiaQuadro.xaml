<UserControl x:Class="Comercial.Views.Proposta.CopiaQuadro"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:local="clr-namespace:Comercial.Views.Proposta"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Filtros -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="55"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="45"/>
                <ColumnDefinition Width="65"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                       Text="TIPO:" 
                       VerticalAlignment="Center"
                       Margin="10,0,10,0"/>
            <telerik:RadComboBox
                x:Name="rcbTipo" 
                Grid.Column="1"
                DisplayMemberPath="tipo"
                ItemsSource="{Binding ComercialPropostaTipos}"
                SelectedItem="{Binding ComercialPropostaTipo}"
                VerticalAlignment="Center" SelectionChanged="rcbTipo_SelectionChanged"/>

            <TextBlock Grid.Column="2" 
                   Text="SIGLA:" 
                   VerticalAlignment="Center"
                   Margin="10,0,10,0"/>
            <telerik:RadComboBox 
                x:Name="rcbSiglas" 
                Grid.Column="3"
                ItemsSource="{Binding ComercialPropostaSiglas}"
                VerticalAlignment="Center" IsFilteringEnabled="True" 
                SelectionChanged="rcbSiglas_SelectionChanged"/>

            <TextBlock Grid.Column="4" 
                   Text="ANO:" 
                   VerticalAlignment="Center"
                   Margin="10,0,10,0"/>
            <telerik:RadComboBox 
                x:Name="rcbAnos"
                Grid.Column="5"
                ItemsSource="{Binding ComercialPropostaAnos}"
                VerticalAlignment="Center" 
                SelectionChanged="rcbAnos_SelectionChanged"/>

            <TextBlock Grid.Column="6" 
                   Text="TEMA:" 
                   VerticalAlignment="Center"
                   Margin="10,0,10,0"/>
            <telerik:RadComboBox 
                x:Name="rcbTemas"
                Grid.Column="7"
                DisplayMemberPath="tema"
                ItemsSource="{Binding ComercialPropostaTemas}"
                VerticalAlignment="Center" SelectionChanged="rcbTemas_SelectionChanged"/>
        </Grid>

        <!-- Grid de Itens -->
        <GroupBox Grid.Row="1" 
              Header="Itens"
              Margin="0,0,0,10">
            <telerik:RadGridView 
                x:Name="rgViewItens"
                IsReadOnly="True"
                ItemsSource="{Binding ComercialItensProposta}"
                AutoGenerateColumns="False"
                ShowGroupPanel="False"
                CanUserFreezeColumns="False"
                Margin="5" FontSize="8" FontFamily="Arial">
                <telerik:RadGridView.Columns>
                    <telerik:GridViewDataColumn Header="TIPO" IsReadOnly="true" DataMemberBinding="{Binding tipo}"/>
                    <telerik:GridViewDataColumn Header="BLOCO" IsReadOnly="true" DataMemberBinding="{Binding bloco}"/>
                    <telerik:GridViewDataColumn Header="FAMÍLIA" IsReadOnly="true" DataMemberBinding="{Binding familia}"/>
                    <telerik:GridViewDataColumn Header="ITEM" IsReadOnly="true" DataMemberBinding="{Binding item}"/>
                    <telerik:GridViewDataColumn Header="LOCAL" IsReadOnly="true" DataMemberBinding="{Binding localitem}"/>
                    <telerik:GridViewDataColumn Header="DESCRIÇÃO" IsReadOnly="true" Width="*" DataMemberBinding="{Binding descricaocomercial}"/>
                    <telerik:GridViewDataColumn Header="DIMENSÃO" IsReadOnly="true" Width="*" DataMemberBinding="{Binding dimensao}"/>
                    <telerik:GridViewDataColumn Header="QTD" IsReadOnly="true" DataMemberBinding="{Binding qtd}"/>
                </telerik:RadGridView.Columns>
            </telerik:RadGridView>
        </GroupBox>

        <!-- Botões -->
        <StackPanel Grid.Row="2" 
                Orientation="Horizontal" 
                HorizontalAlignment="Right">
            <telerik:RadButton 
                Content="COPIAR" 
                Width="100" 
                Height="30"
                Margin="5,0,0,0" Click="RadButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
